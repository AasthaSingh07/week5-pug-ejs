doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")

    body 
        div(class="container-fluid")
            h2 Welcome to PUG Engine 
            hr
            form(action="#", method="post")
                label(for="herotitle") Title :
                div(class="input-group input-group-sm mb-2")
                    input(required id="herotitle", name="ntitle")
                label(for="herofname") Hero FirstName : 
                div(class="input-group input-group-sm mb-2")
                    input(required id="herofname", name="nfirstname")
                label(for="herolname") Hero LastName : 
                div(class="input-group input-group-sm mb-2")
                    input(required id="herolname", name="nlastname")
                label(for="heropower") Hero Power : 
                div(class="input-group input-group-sm mb-2")
                    input(required id="heropower", name="npower")
                label(for="herocity") Hero City : 
                div(class="input-group input-group-sm mb-2")
                    input(required id="herocity", name="ncity")
                button(type="submit" class="btn bg-primary") Submit
            hr
            if avengersData.avengers.length > 0
                ol(class ="list-group list-group-numbered")
                    table(class="table")
                        thead 
                            tr 
                                th(scope="col") Title
                                th(scope="col") FirstName
                                th(scope="col") Lastname
                                th(scope="col") Power
                                th(scope="col") City
                        tbody 
                        each hero in avengersData.avengers
                            tr 
                                td= `${hero.title}`
                                td= `${hero.firstname}`
                                td= `${hero.lastname}`
                                td= `${hero.power}`
                                td= `${hero.city}`


               

               
                

            